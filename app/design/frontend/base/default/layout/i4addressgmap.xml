                <action method="setSrcInJsFolder">
                    <src>i4addressgmap/pointschooser.js</src>
                </action>
            </block>     
             
            
            <action method="addCss"><stylesheet>css/i4addressgmap.css</stylesheet></action>
            
            <action method="addJs"><script>prototype/window.js</script></action>
	       	<action method="addCss"><name>i4addressgmap/windows/themes/default.css</name></action>
	       		
        </reference>
        <reference name="before_body_end">
        	<block type="core/text" name="map_canvas">
